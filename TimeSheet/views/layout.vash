<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@model.Title - Node.js Application</title>
 
  <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
  <link href="/lib/kendo-ui/styles/web/kendo.common.core.min.css" rel="stylesheet" />
  <link href="/lib/kendo-ui/styles/web/kendo.silver.min.css" rel="stylesheet" />

  @html.block("head")
  <link href="/css/site.css" rel="stylesheet" />

  

 
</head>
<body>
     <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-brand-col" href="/">Apr<font style="color:orange">o</font>s<font style="color:orange">o</font>ft Time Sheet</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if(model.User)
                    {
                    <li><a href="/Dashboard">Dashboard</a></li>
					 @if(model.User.RoleName=="Admin")
                    {
                    <li><a href="/Project">Projects</a></li>
                    <li><a href="/User">Users</a></li>
					<li><a href="/TimeSheet">Timesheet</a></li>
					}
                    }else
                    {
                    <li><a href="/">Home</a></li>
                    <li><a href="/About">About</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!--<li><a href="2 Register.htm" id="registerLink">Register</a></li>-->
                    
                @if(model.User)
                    {
                    <li> <a title="Manage" href="/Account/Manage">Hello @model.User.UserName</a> </li>
                    <li><a href="/Account/logout" id="loginLink">Log out</a></li>
                    }else
                    {
                     <li><a href="/Account/login" id="loginLink">Log in</a></li>
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
       @html.block("body")
        <hr />
        <footer>
            <p>© 2014 - Aprosoft TimeSheet Application</p>
        </footer>
    </div>
 

  <script src="/lib/jquery/jquery.min.js"></script>  
  <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>

  <script src="/lib/angular/angular.js"></script>
  <script src="/lib/angular/angular-route.js"></script>
  <script src="/lib/angular/angular-resource.js"></script>
  <script src="/lib/angular/angular-animate.js"></script>
  <script src="/lib/angular/angular-sanitize.js"></script>

  
  <script src="/lib/angular-bootstrap/ui-bootstrap.min.js"></script>
  <script src="/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
  <script src="/lib/kendo/kendo.web.min.js"></script>
  <script src="/lib/angular/angular-kendo.js"></script>
  @html.block("scripts")
</body>
</html>
